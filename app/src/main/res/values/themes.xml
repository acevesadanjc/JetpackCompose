<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Themes M3 -->
    <style name="Base.Theme" parent="Theme.Material3.Light">
        <item name="colorPrimary">@color/primary_blue</item> <!-- fondo action bar -->
        <item name="colorPrimaryDark">@color/accent_yellow
        </item> <!-- barra de: hora, bateria, notificaciones -->
        <item name="colorAccent">@color/complementary_blue
        </item> <!-- utilizado en varios controls, passwords, inputLayouts, etc -->
        <item name="android:windowBackground">@color/primary_red
        </item> <!-- fondo abajo de barra notificaciones y barra action bar -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Base.Theme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="General.Theme" parent="Base.Theme">
        <item name="android:windowBackground">@color/primary_red</item>
    </style>

    <style name="Splash.Theme" parent="Base.Theme.NoActionBar">
        <item name="colorPrimaryDark">@color/primary_red</item>
        <item name="android:windowDisablePreview">false</item>
        <item name="android:windowBackground">@color/primary_red</item>
    </style>

    <!-- Base application theme. -->
    <style name="Base.Theme.ComposeHilt" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.ComposeHilt" parent="Base.Theme.ComposeHilt" />

    <!-- Widget Styles M3 -->
